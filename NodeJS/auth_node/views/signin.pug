extends layout.pug

block content
        .container
            form(method='post', action='/users/get')
                h1 SignIn
                .form-group
                label UserName
                input.form-control(type='text', name='name', 
                    placeholder='Enter Name')
                .form-group
                label Password
                input.form-control(type='password', name='password', 
                    placeholder='******')
                button.btn.btn-default(type='submit') Submit